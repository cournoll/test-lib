{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*test.ts"]
}
